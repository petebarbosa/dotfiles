#!/bin/bash
# Docker Service Management Aliases
# Auto-generated by install scripts
# Do not edit manually - will be overwritten

# Core Service Management
alias ds='cd ~/.dotfiles/docker && ./up.sh up -d'           # Start all services
alias dss='cd ~/.dotfiles/docker && ./up.sh down'           # Stop all services  
alias dsr='cd ~/.dotfiles/docker && ./up.sh restart'        # Restart all services
alias dsps='cd ~/.dotfiles/docker && ./up.sh ps'            # Check status
alias dsl='cd ~/.dotfiles/docker && ./up.sh logs -f'        # View logs
alias dsu='cd ~/.dotfiles/docker && ./up.sh pull && ./up.sh restart'  # Update and restart

# Systemd Integration
alias dse='systemctl --user enable docker-compose-apps'     # Enable auto-start
alias dsd='systemctl --user disable docker-compose-apps'    # Disable auto-start
alias dsss='systemctl --user status docker-compose-apps'    # Check systemd service status

# Backup Operations
alias dsb='cd ~/.dotfiles/docker && ./backup.sh'            # Create backup
alias dsbf='cd ~/.dotfiles/docker && ./backup.sh force'     # Force backup

# Force Operations (destructive)
alias dssf='cd ~/.dotfiles/docker && ./up.sh down --remove-orphans'  # Force stop
alias dsrf='cd ~/.dotfiles/docker && ./up.sh down && ./up.sh up -d'  # Force restart